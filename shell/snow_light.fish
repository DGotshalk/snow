# snow_light fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              545b63
set fish_color_normal            545b63
set fish_pager_color_completion  545b63
set fish_pager_color_description 545b63

# muted text
set fish_color_autosuggestion    70777f
set fish_color_comment           70777f

# reverse muted
set fish_pager_color_progress    fcffff --background=#70777f

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#b0b8c0
set fish_color_search_match      --background=#b0b8c0
set fish_color_selection         --background=#b0b8c0

# red errors/warnings
set fish_color_cancel            b65967
set fish_color_cwd_root          b65967
set fish_color_error             b65967

# gold special elements
set fish_color_redirection       957033
set fish_color_escape            957033
set fish_color_operator          957033
set fish_color_end               957033

# green commands/status
set fish_color_command           4d8343
set fish_color_cwd               4d8343
set fish_color_user              4d8343

# cyan parameters
set fish_color_param             008281

# blue quoted strings
set fish_color_quote             1a78b3

# magenta pager name match
set fish_pager_color_prefix      9364a6

