# snow_light fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              505966
set fish_color_normal            505966
set fish_pager_color_completion  505966
set fish_pager_color_description 505966

# muted text
set fish_color_autosuggestion    6c788a
set fish_color_comment           6c788a

# reverse muted
set fish_pager_color_progress    ffffff --background=#6c788a

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#b2bbcb
set fish_color_search_match      --background=#b2bbcb
set fish_color_selection         --background=#b2bbcb

# red errors/warnings
set fish_color_cancel            b25d60
set fish_color_cwd_root          b25d60
set fish_color_error             b25d60

# gold special elements
set fish_color_redirection       8d7334
set fish_color_escape            8d7334
set fish_color_operator          8d7334
set fish_color_end               8d7334

# green commands/status
set fish_color_command           43814a
set fish_color_cwd               43814a
set fish_color_user              43814a

# cyan parameters
set fish_color_param             008087

# blue quoted strings
set fish_color_quote             3975b0

# magenta pager name match
set fish_pager_color_prefix      97609c

