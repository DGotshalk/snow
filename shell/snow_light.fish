# snow_light fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              505d70
set fish_color_normal            505d70
set fish_pager_color_completion  505d70
set fish_pager_color_description 505d70

# muted text
set fish_color_autosuggestion    748296
set fish_color_comment           748296

# reverse muted
set fish_pager_color_progress    f1f3f6 --background=#748296

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#9fadc2
set fish_color_search_match      --background=#9fadc2
set fish_color_selection         --background=#9fadc2

# red errors/warnings
set fish_color_cancel            c83a4d
set fish_color_cwd_root          c83a4d
set fish_color_error             c83a4d

# gold special elements
set fish_color_redirection       8d6a00
set fish_color_escape            8d6a00
set fish_color_operator          8d6a00
set fish_color_end               8d6a00

# green commands/status
set fish_color_command           008127
set fish_color_cwd               008127
set fish_color_user              008127

# cyan parameters
set fish_color_param             007a8a

# blue quoted strings
set fish_color_quote             006fce

# magenta pager name match
set fish_pager_color_prefix      a449af

