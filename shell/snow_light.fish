# snow_light fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              4c5767
set fish_color_normal            4c5767
set fish_pager_color_completion  4c5767
set fish_pager_color_description 4c5767

# muted text
set fish_color_autosuggestion    65758c
set fish_color_comment           65758c

# reverse muted
set fish_pager_color_progress    f9fbff --background=#65758c

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#b0bcce
set fish_color_search_match      --background=#b0bcce
set fish_color_selection         --background=#b0bcce

# red errors/warnings
set fish_color_cancel            d23a4f
set fish_color_cwd_root          d23a4f
set fish_color_error             d23a4f

# gold special elements
set fish_color_redirection       936e00
set fish_color_escape            936e00
set fish_color_operator          936e00
set fish_color_end               936e00

# green commands/status
set fish_color_command           008726
set fish_color_cwd               008726
set fish_color_user              008726

# cyan parameters
set fish_color_param             008091

# blue quoted strings
set fish_color_quote             0073d9

# magenta pager name match
set fish_pager_color_prefix      ad4bb8

