# snow_light fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              4c5768
set fish_color_normal            4c5768
set fish_pager_color_completion  4c5768
set fish_pager_color_description 4c5768

# muted text
set fish_color_autosuggestion    68778e
set fish_color_comment           68778e

# reverse muted
set fish_pager_color_progress    ffffff --background=#68778e

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#b1bed1
set fish_color_search_match      --background=#b1bed1
set fish_color_selection         --background=#b1bed1

# red errors/warnings
set fish_color_cancel            d14354
set fish_color_cwd_root          d14354
set fish_color_error             d14354

# gold special elements
set fish_color_redirection       916d00
set fish_color_escape            916d00
set fish_color_operator          916d00
set fish_color_end               916d00

# green commands/status
set fish_color_command           008227
set fish_color_cwd               008227
set fish_color_user              008227

# cyan parameters
set fish_color_param             008190

# blue quoted strings
set fish_color_quote             006ecd

# magenta pager name match
set fish_pager_color_prefix      a54aaf

