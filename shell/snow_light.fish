# snow_light fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              535c71
set fish_color_normal            535c71
set fish_pager_color_completion  535c71
set fish_pager_color_description 535c71

# muted text
set fish_color_autosuggestion    778197
set fish_color_comment           778197

# reverse muted
set fish_pager_color_progress    f2f3f6 --background=#778197

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#a2acc3
set fish_color_search_match      --background=#a2acc3
set fish_color_selection         --background=#a2acc3

# red errors/warnings
set fish_color_cancel            c54040
set fish_color_cwd_root          c54040
set fish_color_error             c54040

# gold special elements
set fish_color_redirection       816e00
set fish_color_escape            816e00
set fish_color_operator          816e00
set fish_color_end               816e00

# green commands/status
set fish_color_command           008134
set fish_color_cwd               008134
set fish_color_user              008134

# cyan parameters
set fish_color_param             007996

# blue quoted strings
set fish_color_quote             006ed3

# magenta pager name match
set fish_pager_color_prefix      b043a5

