# snow_light fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              445368
set fish_color_normal            445368
set fish_pager_color_completion  445368
set fish_pager_color_description 445368

# muted text
set fish_color_autosuggestion    65758c
set fish_color_comment           65758c

# reverse muted
set fish_pager_color_progress    f9fbff --background=#65758c

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#b8c5d9
set fish_color_search_match      --background=#b8c5d9
set fish_color_selection         --background=#b8c5d9

# red errors/warnings
set fish_color_cancel            ce4152
set fish_color_cwd_root          ce4152
set fish_color_error             ce4152

# gold special elements
set fish_color_redirection       926e00
set fish_color_escape            926e00
set fish_color_operator          926e00
set fish_color_end               926e00

# green commands/status
set fish_color_command           00872d
set fish_color_cwd               00872d
set fish_color_user              00872d

# cyan parameters
set fish_color_param             00808f

# blue quoted strings
set fish_color_quote             0075d4

# magenta pager name match
set fish_pager_color_prefix      aa4eb4

