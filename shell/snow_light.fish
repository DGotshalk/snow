# snow_light fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              4a576b
set fish_color_normal            4a576b
set fish_pager_color_completion  4a576b
set fish_pager_color_description 4a576b

# muted text
set fish_color_autosuggestion    68778e
set fish_color_comment           68778e

# reverse muted
set fish_pager_color_progress    ffffff --background=#68778e

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#b0bed4
set fish_color_search_match      --background=#b0bed4
set fish_color_selection         --background=#b0bed4

# red errors/warnings
set fish_color_cancel            db3650
set fish_color_cwd_root          db3650
set fish_color_error             db3650

# gold special elements
set fish_color_redirection       977000
set fish_color_escape            977000
set fish_color_operator          977000
set fish_color_end               977000

# green commands/status
set fish_color_command           008a21
set fish_color_cwd               008a21
set fish_color_user              008a21

# cyan parameters
set fish_color_param             008294

# blue quoted strings
set fish_color_quote             0075e2

# magenta pager name match
set fish_pager_color_prefix      b349c0

