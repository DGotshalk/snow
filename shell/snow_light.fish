# snow_light fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              565b5f
set fish_color_normal            565b5f
set fish_pager_color_completion  565b5f
set fish_pager_color_description 565b5f

# muted text
set fish_color_autosuggestion    71777b
set fish_color_comment           71777b

# reverse muted
set fish_pager_color_progress    fcffff --background=#71777b

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#b2b7bc
set fish_color_search_match      --background=#b2b7bc
set fish_color_selection         --background=#b2b7bc

# red errors/warnings
set fish_color_cancel            c0506f
set fish_color_cwd_root          c0506f
set fish_color_error             c0506f

# gold special elements
set fish_color_redirection       a16a27
set fish_color_escape            a16a27
set fish_color_operator          a16a27
set fish_color_end               a16a27

# green commands/status
set fish_color_command           50832f
set fish_color_cwd               50832f
set fish_color_user              50832f

# cyan parameters
set fish_color_param             00857a

# blue quoted strings
set fish_color_quote             007cbd

# magenta pager name match
set fish_pager_color_prefix      8c64b7

