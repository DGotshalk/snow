# snow_light fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              535c6a
set fish_color_normal            535c6a
set fish_pager_color_completion  535c6a
set fish_pager_color_description 535c6a

# muted text
set fish_color_autosuggestion    6e7785
set fish_color_comment           6e7785

# reverse muted
set fish_pager_color_progress    ffffff --background=#6e7785

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#aeb8c7
set fish_color_search_match      --background=#aeb8c7
set fish_color_selection         --background=#aeb8c7

# red errors/warnings
set fish_color_cancel            b25d60
set fish_color_cwd_root          b25d60
set fish_color_error             b25d60

# gold special elements
set fish_color_redirection       8d7334
set fish_color_escape            8d7334
set fish_color_operator          8d7334
set fish_color_end               8d7334

# green commands/status
set fish_color_command           45834c
set fish_color_cwd               45834c
set fish_color_user              45834c

# cyan parameters
set fish_color_param             00838a

# blue quoted strings
set fish_color_quote             3f7ab5

# magenta pager name match
set fish_pager_color_prefix      9a639f

