# snow_dark fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              a2acc3
set fish_color_normal            a2acc3
set fish_pager_color_completion  a2acc3
set fish_pager_color_description a2acc3

# muted text
set fish_color_autosuggestion    778197
set fish_color_comment           778197

# reverse muted
set fish_pager_color_progress    2a2d36 --background=#778197

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#535c71
set fish_color_search_match      --background=#535c71
set fish_color_selection         --background=#535c71

# red errors/warnings
set fish_color_cancel            d27d75
set fish_color_cwd_root          d27d75
set fish_color_error             d27d75

# gold special elements
set fish_color_redirection       a69450
set fish_color_escape            a69450
set fish_color_operator          a69450
set fish_color_end               a69450

# green commands/status
set fish_color_command           5aa572
set fish_color_cwd               5aa572
set fish_color_user              5aa572

# cyan parameters
set fish_color_param             00a6b6

# blue quoted strings
set fish_color_quote             7197d9

# magenta pager name match
set fish_pager_color_prefix      c27fb8

