# snow_dark fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              b5c5de
set fish_color_normal            b5c5de
set fish_pager_color_completion  b5c5de
set fish_pager_color_description b5c5de

# muted text
set fish_color_autosuggestion    8797af
set fish_color_comment           8797af

# reverse muted
set fish_pager_color_progress    28313d --background=#8797af

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#445368
set fish_color_search_match      --background=#445368
set fish_color_selection         --background=#445368

# red errors/warnings
set fish_color_cancel            e6757a
set fish_color_cwd_root          e6757a
set fish_color_error             e6757a

# gold special elements
set fish_color_redirection       b5933f
set fish_color_escape            b5933f
set fish_color_operator          b5933f
set fish_color_end               b5933f

# green commands/status
set fish_color_command           55a960
set fish_color_cwd               55a960
set fish_color_user              55a960

# cyan parameters
set fish_color_param             00a8b2

# blue quoted strings
set fish_color_quote             499ceb

# magenta pager name match
set fish_pager_color_prefix      c87ece

