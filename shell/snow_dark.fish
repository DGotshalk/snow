# snow_dark fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              b0bed4
set fish_color_normal            b0bed4
set fish_pager_color_completion  b0bed4
set fish_pager_color_description b0bed4

# muted text
set fish_color_autosuggestion    8595ad
set fish_color_comment           8595ad

# reverse muted
set fish_pager_color_progress    272e37 --background=#8595ad

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#4a576b
set fish_color_search_match      --background=#4a576b
set fish_color_selection         --background=#4a576b

# red errors/warnings
set fish_color_cancel            e4797d
set fish_color_cwd_root          e4797d
set fish_color_error             e4797d

# gold special elements
set fish_color_redirection       c7a556
set fish_color_escape            c7a556
set fish_color_operator          c7a556
set fish_color_end               c7a556

# green commands/status
set fish_color_command           62b06a
set fish_color_cwd               62b06a
set fish_color_user              62b06a

# cyan parameters
set fish_color_param             00afb8

# blue quoted strings
set fish_color_quote             57a0eb

# magenta pager name match
set fish_pager_color_prefix      cc87d2

