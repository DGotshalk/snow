# snow_dark fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              b0bbcc
set fish_color_normal            b0bbcc
set fish_pager_color_completion  b0bbcc
set fish_pager_color_description b0bbcc

# muted text
set fish_color_autosuggestion    8995a8
set fish_color_comment           8995a8

# reverse muted
set fish_pager_color_progress    272e37 --background=#8995a8

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#4e5a6b
set fish_color_search_match      --background=#4e5a6b
set fish_color_selection         --background=#4e5a6b

# red errors/warnings
set fish_color_cancel            d37b7d
set fish_color_cwd_root          d37b7d
set fish_color_error             d37b7d

# gold special elements
set fish_color_redirection       b89b5a
set fish_color_escape            b89b5a
set fish_color_operator          b89b5a
set fish_color_end               b89b5a

# green commands/status
set fish_color_command           67a66c
set fish_color_cwd               67a66c
set fish_color_user              67a66c

# cyan parameters
set fish_color_param             00a4ab

# blue quoted strings
set fish_color_quote             6198d6

# magenta pager name match
set fish_pager_color_prefix      bb82bf

