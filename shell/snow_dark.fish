# snow_dark fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              b1bfd4
set fish_color_normal            b1bfd4
set fish_pager_color_completion  b1bfd4
set fish_pager_color_description b1bfd4

# muted text
set fish_color_autosuggestion    8696ae
set fish_color_comment           8696ae

# reverse muted
set fish_pager_color_progress    272e39 --background=#8696ae

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#495669
set fish_color_search_match      --background=#495669
set fish_color_selection         --background=#495669

# red errors/warnings
set fish_color_cancel            df7579
set fish_color_cwd_root          df7579
set fish_color_error             df7579

# gold special elements
set fish_color_redirection       c7a556
set fish_color_escape            c7a556
set fish_color_operator          c7a556
set fish_color_end               c7a556

# green commands/status
set fish_color_command           62b06a
set fish_color_cwd               62b06a
set fish_color_user              62b06a

# cyan parameters
set fish_color_param             00aab3

# blue quoted strings
set fish_color_quote             57a0eb

# magenta pager name match
set fish_pager_color_prefix      c782cd

