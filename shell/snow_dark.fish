# snow_dark fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              aeb8c7
set fish_color_normal            aeb8c7
set fish_pager_color_completion  aeb8c7
set fish_pager_color_description aeb8c7

# muted text
set fish_color_autosuggestion    8c96a4
set fish_color_comment           8c96a4

# reverse muted
set fish_pager_color_progress    2b2e32 --background=#8c96a4

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#535c6a
set fish_color_search_match      --background=#535c6a
set fish_color_selection         --background=#535c6a

# red errors/warnings
set fish_color_cancel            be8786
set fish_color_cwd_root          be8786
set fish_color_error             be8786

# gold special elements
set fish_color_redirection       a6936c
set fish_color_escape            a6936c
set fish_color_operator          a6936c
set fish_color_end               a6936c

# green commands/status
set fish_color_command           799e7a
set fish_color_cwd               799e7a
set fish_color_user              799e7a

# cyan parameters
set fish_color_param             5b9fa3

# blue quoted strings
set fish_color_quote             7a97bd

# magenta pager name match
set fish_pager_color_prefix      ad89ae

