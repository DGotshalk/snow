# snow_dark fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              b2bfd2
set fish_color_normal            b2bfd2
set fish_pager_color_completion  b2bfd2
set fish_pager_color_description b2bfd2

# muted text
set fish_color_autosuggestion    8797af
set fish_color_comment           8797af

# reverse muted
set fish_pager_color_progress    28313d --background=#8797af

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#48586d
set fish_color_search_match      --background=#48586d
set fish_color_selection         --background=#48586d

# red errors/warnings
set fish_color_cancel            d77f81
set fish_color_cwd_root          d77f81
set fish_color_error             d77f81

# gold special elements
set fish_color_redirection       b19454
set fish_color_escape            b19454
set fish_color_operator          b19454
set fish_color_end               b19454

# green commands/status
set fish_color_command           67a66c
set fish_color_cwd               67a66c
set fish_color_user              67a66c

# cyan parameters
set fish_color_param             00a8af

# blue quoted strings
set fish_color_quote             649bd9

# magenta pager name match
set fish_pager_color_prefix      bd84c2

