# snow_dark fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              b0bcce
set fish_color_normal            b0bcce
set fish_pager_color_completion  b0bcce
set fish_pager_color_description b0bcce

# muted text
set fish_color_autosuggestion    8797af
set fish_color_comment           8797af

# reverse muted
set fish_pager_color_progress    282f3a --background=#8797af

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#4c5767
set fish_color_search_match      --background=#4c5767
set fish_color_selection         --background=#4c5767

# red errors/warnings
set fish_color_cancel            dc787b
set fish_color_cwd_root          dc787b
set fish_color_error             dc787b

# gold special elements
set fish_color_redirection       b19249
set fish_color_escape            b19249
set fish_color_operator          b19249
set fish_color_end               b19249

# green commands/status
set fish_color_command           5da564
set fish_color_cwd               5da564
set fish_color_user              5da564

# cyan parameters
set fish_color_param             00a6af

# blue quoted strings
set fish_color_quote             5799df

# magenta pager name match
set fish_pager_color_prefix      bf7fc5

