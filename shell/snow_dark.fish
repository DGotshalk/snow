# snow_dark fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              b0bed4
set fish_color_normal            b0bed4
set fish_pager_color_completion  b0bed4
set fish_pager_color_description b0bed4

# muted text
set fish_color_autosuggestion    8696ae
set fish_color_comment           8696ae

# reverse muted
set fish_pager_color_progress    282e38 --background=#8696ae

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#4a576b
set fish_color_search_match      --background=#4a576b
set fish_color_selection         --background=#4a576b

# red errors/warnings
set fish_color_cancel            e27277
set fish_color_cwd_root          e27277
set fish_color_error             e27277

# gold special elements
set fish_color_redirection       d1ad58
set fish_color_escape            d1ad58
set fish_color_operator          d1ad58
set fish_color_end               d1ad58

# green commands/status
set fish_color_command           5db167
set fish_color_cwd               5db167
set fish_color_user              5db167

# cyan parameters
set fish_color_param             00adb7

# blue quoted strings
set fish_color_quote             499ceb

# magenta pager name match
set fish_pager_color_prefix      cc82d2

