# snow_dark fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              b2bbcb
set fish_color_normal            b2bbcb
set fish_pager_color_completion  b2bbcb
set fish_pager_color_description b2bbcb

# muted text
set fish_color_autosuggestion    8a96a8
set fish_color_comment           8a96a8

# reverse muted
set fish_pager_color_progress    2b2e32 --background=#8a96a8

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#505966
set fish_color_search_match      --background=#505966
set fish_color_selection         --background=#505966

# red errors/warnings
set fish_color_cancel            be8786
set fish_color_cwd_root          be8786
set fish_color_error             be8786

# gold special elements
set fish_color_redirection       b09c75
set fish_color_escape            b09c75
set fish_color_operator          b09c75
set fish_color_end               b09c75

# green commands/status
set fish_color_command           7ca17d
set fish_color_cwd               7ca17d
set fish_color_user              7ca17d

# cyan parameters
set fish_color_param             5b9fa3

# blue quoted strings
set fish_color_quote             7a97bd

# magenta pager name match
set fish_pager_color_prefix      ad8aaf

