# snow_dark fish shell theme by nightsense (https://github.com/nightsense/snow)

# normal text
set fish_color_host              9fadc2
set fish_color_normal            9fadc2
set fish_pager_color_completion  9fadc2
set fish_pager_color_description 9fadc2

# muted text
set fish_color_autosuggestion    748296
set fish_color_comment           748296

# reverse muted
set fish_pager_color_progress    282e36 --background=#748296

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#505d70
set fish_color_search_match      --background=#505d70
set fish_color_selection         --background=#505d70

# red errors/warnings
set fish_color_cancel            d47b7d
set fish_color_cwd_root          d47b7d
set fish_color_error             d47b7d

# gold special elements
set fish_color_redirection       ad9151
set fish_color_escape            ad9151
set fish_color_operator          ad9151
set fish_color_end               ad9151

# green commands/status
set fish_color_command           64a369
set fish_color_cwd               64a369
set fish_color_user              64a369

# cyan parameters
set fish_color_param             00a4ac

# blue quoted strings
set fish_color_quote             6198d6

# magenta pager name match
set fish_pager_color_prefix      ba81bf

